<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/title_tv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:layout_marginLeft="20dp"
                  android:textSize="18sp"
                  android:textColor="@color/alarm_cardview_title_color"
                  android:text="Create date and time for PillBox"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:paddingBottom="2dp">

            <ImageView android:id="@+id/box_number_iv"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.25"
                       android:layout_margin="4dp"
                       android:paddingLeft="6dp"
                       android:layout_gravity="center"
                       android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.75">

                <TextView android:id="@+id/date_tv"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:layout_marginStart="16dp"
                          android:layout_marginLeft="16dp"
                          android:layout_marginRight="16dp"
                          android:layout_marginEnd="16dp"
                          android:textColor="@color/alarm_cardview_date_time_color"
                          android:textSize="16sp"
                          android:text="date text"/>

                <TextView android:id="@+id/time_tv"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="8dp"
                          android:layout_marginStart="16dp"
                          android:layout_marginLeft="16dp"
                          android:layout_marginRight="16dp"
                          android:layout_marginEnd="16dp"
                          android:textColor="@color/alarm_cardview_date_time_color"
                          android:textSize="16sp"
                          android:text="time text"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/alarm_cardview_separator_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ToggleButton android:id="@+id/toggle_btn"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textSize="14sp"
                          android:layout_marginRight="16dp"
                          android:paddingLeft="16dp"
                          android:paddingRight="16dp"
                          android:textStyle="bold"
                          android:textOff="@string/toggle_off"
                          android:textOn="@string/toggle_on"
                          android:textColor="@android:color/holo_red_dark"
                          android:layout_weight="0.5"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:background="@color/alarm_cardview_separator_color"/>

            <Button android:id="@+id/time_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:text="Time"/>
        </LinearLayout>
    </LinearLayout>
</merge>